


<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true, scope: :book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <br><%= f.submit 'Update Book' %></br>



 <td><%= link_to "Show", book_path(@book.id) %></td>

 <a class="back" href="/books">Back</a>


<% end %>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

