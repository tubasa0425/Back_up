<h1>Books</h1>

<table>
   <thead>
     <tr>
       
       <th>Title</th>
       <th>Body</th>
       
     </tr>
   </thead>

  <tbody>
     <% @books.each do |book| %>
   <tr> 
     <td>
       
       <%= book.title %>
       
     </td>
   <td>
     
     <%= book.body %>
     
   </td>
   
    <td>
     
     <%= link_to "Show", book_path(book.id) %>
     <%= link_to "Edit", edit_book_path(book.id) %>
     <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
  
    </td>
    
   </tr>  
  
<% end %>
  </tbody>   
  
</table>


　





<h2>New book</h2>


<!-- form_with部分 -->
  <%= form_with model: @book, url:'/books', local:true, scope: :book do |f| %>
　

  
  
<h4>Title</h4>
 <%= f.text_field :title %>

<h4>Body</h4>
 <%= f.text_area :body %>
 

<br>
  <%= f.submit 'Create Book' %>
</br>
 <% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<% end %>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
